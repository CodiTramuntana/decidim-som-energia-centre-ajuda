<% if organization %>
  <%= link_to decidim.root_url(host: organization.host) do %>
    <span>
      <% if organization.logo.present? %>
        <%= image_tag organization.logo.medium.url %>
      <% end %>
      <%= organization.name %>
    </span>
    <style>
      .logo-wrapper span{
        color: #302C2C;
        font-weight: 600;
        font-size: 1.4em;
        display: inline-block;
        text-align: left;
        padding-left: 8px;
        line-height: 1;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .logo-wrapper span img{
       float: left;
       padding-right: 1.5rem;
      }
    </style>
  <% end %>
<% else %>
  <%= Decidim.application_name %>
<% end %>
